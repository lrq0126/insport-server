
.content{height: 100%;text-align: center;}
.tab{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;}
.tab-ul{width: 100%;height: 86rpx;border-top: 2rpx solid #e7e7e7;background-color: #fff;color: #444;position: fixed;top: 0;left: 0;}

.line{width: 56rpx;height: 6rpx;background-color: #7da7d2;position: absolute;bottom: 0;left: 89rpx;-webkit-transition: .2s;-o-transition: .2s;transition: .2s;}
.tab-li{-webkit-box-flex: 1;-webkit-flex-grow: 1;-ms-flex-positive: 1;flex-grow: 1;line-height: 86rpx;}
.tab-li.active{color: #74a1cf;}
.tab-content{height: 100%;padding-top: 86rpx;-webkit-box-sizing: border-box;box-sizing: border-box;}
.state{margin: 108rpx 0 88rpx 0;color: #999;}
.nodata{padding-top: 230rpx;}
.nodata-img{width: 160rpx;height: 144rpx;}
.nodata-btn{border: 1px solid #6999cb;width: 250rpx;height: 66rpx;color: #6999cb;line-height: 66rpx;font-size: 28rpx;background: #fff;}
.btn-hover{background: #fff;}
.nodata-btn:after{border: none;}

