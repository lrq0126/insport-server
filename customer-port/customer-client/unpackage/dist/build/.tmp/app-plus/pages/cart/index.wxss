
.content{text-align: center;border-top: 1px solid #f0f0f0;}
.state{margin: 40rpx 0 60rpx 0;color: #999;}
.nodata{padding-top: 200rpx;}
.nodata-img{width: 160rpx;height: 144rpx;}
.nodata-btn{border: 1px solid #6999cb;width: 200rpx;height: 66rpx;color: #6999cb;line-height: 66rpx;font-size: 28rpx;background: #fff;-webkit-box-shadow: 0px 2px 6px #999;box-shadow: 0px 2px 6px #999;}
.btn-hover{background: #fff;}
.scroll{padding-bottom: 100rpx;}
.cart-list{background-color: #fff;}
.cart-item{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;padding: 26rpx 24rpx 24rpx 0;border-bottom: 1px solid #f0f0f0;}
.cart-checkbox{width: 44rpx;text-align: center;margin: 0 22rpx 0 30rpx;}
.cart-checkbox .uni-checkbox-input{margin: 0;}
.cart-info{-webkit-box-flex: 2;-webkit-flex-grow: 2;-ms-flex-positive: 2;flex-grow: 2;text-align: left;padding-left: 15rpx;}
.cart-title{font-weight: 700;font-size: 32rpx;line-height: 32rpx;margin-bottom: 14rpx;}
.cart-type,.cart-hint{font-size: 20rpx;line-height: 20rpx;}
.cart-type{color: #666;margin-bottom: 8rpx;}
.cart-hint{color: #88afd6;}
.cart-price{margin-right: 10rpx;font-weight: 700;}
.numbox{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;}
.numbox-minus,.numbox-plus{font-size: 56rpx;}
.numbox-minus{color: #91b5d9;background-color: #fff;}
.numbox-value{margin: 0 16rpx;color: #91b5d9;font-weight: 700;min-width: 20rpx;}
.numbox-plus{color: #fff;color: #91b5d9;}
.cart-checkbox,.numbox-minus,.numbox-plus,.numbox-value,.cart-price{line-height: 100rpx;}
.cart-footer{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;width: 100%;-webkit-box-pack: justify;-webkit-justify-content: space-between;-ms-flex-pack: justify;justify-content: space-between;height: 100rpx;background-color: #fff;position: fixed;bottom: 0;left: 0;border-top: 1px solid #f0f0f0;}
.total-price-box{-webkit-box-flex: 2;-webkit-flex-grow: 2;-ms-flex-positive: 2;flex-grow: 2;text-align: left;line-height: 100rpx;padding-left: 20rpx;}
.total-price{font-size: 48rpx;font-weight: 700;}
.clear{width: 200rpx;height: 100rpx;line-height: 100rpx;border-radius: 0;margin: 0;}


