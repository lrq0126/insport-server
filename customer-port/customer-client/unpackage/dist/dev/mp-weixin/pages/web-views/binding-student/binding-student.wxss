.binding-student .main-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin: 80rpx 0;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
}
.binding-student .main-box .school-name {
    margin-left: 10rpx;
}
.binding-student .main-box .school-name .uni-tag--inverted,
    .binding-student .main-box .school-name .uni-tag--error {
      border-radius: 50rpx 0 0 50rpx;
      padding: 0 10rpx 0 40rpx;
}
.binding-student .main-box .school-name .uni-tag {
      height: 92rpx;
}
.binding-student .main-button {
  width: 21%;
  padding: 8rpx 20rpx;
  font-size: 28rpx;
  margin: 0 10rpx 0 0;
}
.binding-student .main-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  height: 36rpx;
  /* Input 高度 */
  color: #333333;
  padding: 26rpx 10rpx;
  width: 65%;
}
.binding-student .img {
  width: 32rpx;
  height: 32rpx;
  font-size: 32rpx;
  line-height: normal;
}
.binding-student .main-input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  text-align: left;
  font-size: 28rpx;
  /* line-height: 100upx; */
  padding-right: 10rpx;
}
.binding-student .vercode {
  color: rgba(0, 0, 0, 0.7);
  font-size: 24rpx;
  line-height: 100rpx;
}
.binding-student .vercode-run {
  color: rgba(0, 0, 0, 0.4) !important;
}
.binding-student .oBorder {
  -webkit-box-shadow: 0 0 60rpx 0 rgba(43, 86, 112, 0.1);
  box-shadow: 0 0 60rpx 0 rgba(43, 86, 112, 0.1);
  border: 1px solid #f0ad4e;
  border-radius: 0 50rpx 50rpx 0;
}
.binding-student .btn-box {
  margin: 160rpx 40rpx;
}
.binding-student .btn-box > button {
  margin: 60rpx 0;
}

